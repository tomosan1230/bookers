
  <p id="notice"></p>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>

      <% @books.each do |book| %>

      <tr>
        <td>
          <%= book.title %>
        </td>
        <td>
          <%= book.body %>
        </td>
        <td>
          <%= link_to "Show", book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(book.id) %>
        </td>
        <td>Destroy</td>
      </tr>

    <% end %>
    </tbody>

  </table>

  <h2>New book</h2>

  <%= form_with model: @book do |f| %>

    <div class="field">
      <label for="book_title">本のタイトル</label>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <label for="book_body">感想</label>
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit  'Create Book' %>
    </div>
  <% end %>

